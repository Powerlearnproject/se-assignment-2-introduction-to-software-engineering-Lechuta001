import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
from sklearn.datasets import load_iris

# Load dataset
try:
    iris = load_iris(as_frame=True)
    df = iris.frame
    print("Dataset loaded successfully.")
except Exception as e:
    print("Error loading dataset:", e)

# Display first few rows
print("\nFirst 5 rows:")
print(df.head())

# Explore structure
print("\nData Types:")
print(df.dtypes)

print("\nMissing Values:")
print(df.isnull().sum())

# No missing values in Iris dataset, but hereâ€™s how you'd clean if there were any:
df = df.dropna()  # or use df.fillna(value)


# Basic statistics
print("\nDescriptive statistics:")
print(df.describe())

# Group by species and compute mean
grouped_means = df.groupby('target').mean()
print("\nMean values by species (target):")
print(grouped_means)

# Add species names for clarity
df['species'] = df['target'].map(dict(zip(range(3), iris.target_names)))

print("\nMean sepal length per species:")
print(df.groupby('species')['sepal length (cm)'].mean())



# Set style
sns.set(style="whitegrid")

# 1. Line Chart (simulate time-series by index)
plt.figure(figsize=(8,5))
plt.plot(df.index, df['sepal length (cm)'], label='Sepal Length')
plt.title('Sepal Length Over Sample Index')
plt.xlabel('Index')
plt.ylabel('Sepal Length (cm)')
plt.legend()
plt.show()

# 2. Bar Chart
plt.figure(figsize=(8,5))
sns.barplot(x='species', y='petal length (cm)', data=df, ci=None)
plt.title('Average Petal Length per Species')
plt.xlabel('Species')
plt.ylabel('Petal Length (cm)')
plt.show()

# 3. Histogram
plt.figure(figsize=(8,5))
sns.histplot(df['sepal width (cm)'], bins=15, kde=True)
plt.title('Distribution of Sepal Width')
plt.xlabel('Sepal Width (cm)')
plt.ylabel('Count')
plt.show()

# 4. Scatter Plot
plt.figure(figsize=(8,5))
sns.scatterplot(data=df, x='sepal length (cm)', y='petal length (cm)', hue='species')
plt.title('Sepal Length vs Petal Length')
plt.xlabel('Sepal Length (cm)')
plt.ylabel('Petal Length (cm)')
plt.legend()
plt.show()



